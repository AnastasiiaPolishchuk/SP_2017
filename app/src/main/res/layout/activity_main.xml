<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.annapol04.munchkin.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1 :" />

        <EditText
            android:id="@+id/name_of_player_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2 :" />

        <EditText
            android:id="@+id/name_of_player_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 3 :" />

        <EditText
            android:id="@+id/name_of_player_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 4 :" />

        <EditText
            android:id="@+id/name_of_player_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 5 :" />

        <EditText
            android:id="@+id/name_of_player_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 6 :" />

        <EditText
            android:id="@+id/name_of_player_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="true"
        android:onClick="start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore"
        android:textAllCaps="true"
        android:onClick="goToHighscore" />

</LinearLayout>
