<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid
                android:color="#BCAAA4"/>
            <stroke
                android:width="2dp"
                android:color="#6D4C41"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#A1887F"
                android:startColor="#BCAAA4"/>
            <stroke
                android:width="2dp"
                android:color="#6D4C41"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>